<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>About Us - Hospital Management System</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">
    <!-- <link rel="stylesheet" href="aboutus.css"> -->
    <style>
        /* Global Reset */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Arial', sans-serif;
            background-color: #f4f4f4;
            color: #333;
        }

        /* Header Section */
        header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 20px 50px;
            background: linear-gradient(135deg, #480ca8, #4cc9f0);
            /* Keeping the gradient */
            position: sticky;
            top: 0;
            z-index: 100;
            opacity: 1;
            /* Slight opacity to blend with content */
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
            /* Soft box shadow */
            transition: background 0.3s ease-in-out;
            font-size: 1rem;
        }

        header .logo h1 {
            font-size: 1m;
            font-weight: 550;
            /* text-transform: uppercase; */
            letter-spacing: 1px;
            color: white;
        }

        nav ul {
            list-style: none;
            display: flex;
            gap: 30px;
        }

        nav ul li a {
            text-decoration: none;
            color: #fff;
            font-size: 1.1em;
            letter-spacing: 1px;
            transition: color 0.3s ease;
            font-size: 1rem;
        }

        nav ul li a:hover {
            color: #e4d72c;
            text-decoration: underline;

        }

        /* Banner Section */
        .banner {
            background-image: linear-gradient(135deg, #480ca8, #4cc9f0);
            height: 200px;
            display: flex;
            justify-content: center;
            align-items: center;
            color: white;
            text-align: center;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
        }

        .banner-content h2 {
            font-size: 3em;
            font-weight: 600;
            margin-bottom: 10px;
        }

        .banner-content p {
            font-size: 1.5em;
            font-weight: 300;
        }

        /* About Us Section */
        .about-us {
            padding: 40px 50px;
            background-color: #fff;
            text-align: center;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

        .about-us h1 {
            font-size: 2.5em;
            font-weight: 600;
            color: #2c3e50;
            margin-bottom: 10px;
        }

        .about-container {
            display: flex;
            flex-direction: row;
            justify-content: space-between;
            gap: 40px;
            /* flex-wrap: wrap; */
        }

        .about-text {
            width: 50%;
            display: flex;
            text-align: justify;
            flex-direction: column;
            justify-content: center;
        }

        .about-text h2 {
            font-size: 2em;
            color: #2c3e50;
            margin-bottom: 15px;
        }

        .about-text p {
            font-size: 1.1em;
            color: #7f8c8d;
            line-height: 1.6;
        }

        .about-image {
            width: 50%;
        }

        .about-image img {
            width: 100%;
            height: auto;
            border-radius: 10px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        }

        /* Services Section */
        .services {
            background-color: #ecf0f1;
            padding: 50px 30px;
            text-align: center;
        }

        .services h2 {
            font-size: 2.5em;
            color: #2c3e50;
            margin-bottom: 30px;
        }

        .services-container {
            display: flex;
            gap: 40px;
            justify-content: center;
            flex-wrap: wrap;
        }

        .service-card {
            background-color: #fff;
            padding: 30px;
            width: 250px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            border-radius: 10px;
            text-align: center;
            transition: transform 0.3s ease-in-out;
        }

        .service-card:hover {
            transform: scale(1.05);
        }

        .service-icon {
            font-size: 3em;
            color: #4cc9f0;
            margin-bottom: 15px;
        }

        .service-card h3 {
            font-size: 1.5em;
            color: #2c3e50;
            margin-bottom: 10px;
        }

        .service-card p {
            color: #7f8c8d;
            font-size: 1.1em;
        }

        /* Team Section */
        .team {
            background-color: #fff;
            padding: 50px 30px;
            text-align: center;
            position: relative;
            animation: fadeIn 1.5s ease-in-out;
        }

        .team h2 {
            font-size: 2.5em;
            color: #2c3e50;
            margin-bottom: 30px;
        }

        .slider-container {
            position: relative;
            overflow: hidden;
            width: 80%;
            margin: auto;
        }

        .team-container {
            display: flex;
            gap: 20px;
            transition: transform 0.5s ease-in-out;
        }

        .team-card {
            background-color: #ecf0f1;
            padding: 20px;
            width: 250px;
            border-radius: 10px;
            text-align: center;
            transition: transform 0.3s ease-in-out;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            flex: 0 0 auto;
        }

        .team-card:hover {
            transform: scale(1.05);
        }

        .team-card img {
            width: 100px;
            height: 100px;
            border-radius: 50%;
            object-fit: cover;
            margin-bottom: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
        }

        .team-card h3 {
            font-size: 1.5em;
            color: #2c3e50;
            margin-bottom: 5px;
        }

        .team-card p {
            color: #7f8c8d;
            font-size: 1.1em;
        }

        .arrow {
            position: absolute;
            z-index: 1;
            top: 50%;
            transform: translateY(-50%);
            background-color: rgba(0, 0, 0, 0.5);
            color: white;
            border: none;
            padding: 10px;
            cursor: pointer;
            border-radius: 50%;
        }

        .arrow-left {
            left: 10px;
        }

        .arrow-right {
            right: 10px;
        }

        @keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
        
        /* Testimonials Section */
        .testimonials {
            padding: 50px 30px;
            text-align: center;
            background-color: #ecf0f1;
        }

        .testimonials h2 {
            font-size: 2.5em;
            color: #2c3e50;
            margin-bottom: 30px;
        }

        .testimonial-container {
            display: flex;
            justify-content: center;
            gap: 40px;
            flex-wrap: wrap;
        }

        .testimonial {
            width: 300px;
            background-color: #ecf0f1;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            text-align: center;
        }

        .testimonial p {
            font-size: 1.2em;
            color: #7f8c8d;
            margin-bottom: 15px;
        }

        .testimonial span {
            font-weight: bold;
            color: #2c3e50;
        }

        /* Contact Form Section */
        .contact-form {
            padding: 50px 30px;
            background-color: #ecf0f1;
            text-align: center;
        }

        .contact-form h2 {
            font-size: 2.5em;
            color: #2c3e50;
            margin-bottom: 30px;
        }

        .contact-form form {
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 20px;
        }

        .contact-form input,
        .contact-form textarea {
            padding: 15px;
            width: 50%;
            font-size: 1.1em;
            border: 1px solid #ccc;
            border-radius: 10px;
        }

        .contact-form button {
            padding: 15px 30px;
            background-color: #480ca8;
            color: #fff;
            border: none;
            border-radius: 10px;
            font-size: 1.2em;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        .contact-form button:hover {
            background-color: #4cc9f0;
        }

        /* Back to Top Button */
        .back-to-top {
            position: fixed;
            bottom: 20px;
            right: 20px;
            background-color: #480ca8;
            color: #fff;
            border: none;
            border-radius: 50%;
            font-size: 2em;
            padding: 15px;
            cursor: pointer;
            display: none;
            transition: background-color 0.3s ease;
        }

        .back-to-top:hover {
            background-color: #4cc9f0;
        }

        /* Footer Section */
        footer {
            background: linear-gradient(135deg, #480ca8, #4cc9f0);
            color: #fff;
            text-align: center;
            padding: 20px 0;
            margin-top: 50px;
        }

        footer p {
            font-size: 1.1em;
        }

        /* Mobile Responsiveness */
        @media (max-width: 768px) {
            .about-container {
                flex-direction: column;
                align-items: center;
            }

            .about-text,
            .about-image {
                width: 100%;
            }

            .services-container {
                flex-direction: column;
                align-items: center;
            }

            .testimonial-container {
                flex-direction: column;
                align-items: center;
            }

            .contact-form input,
            .contact-form textarea {
                width: 80%;
            }
        }
    </style>
</head>

<body>

    <!-- Header Section -->
    <header>
        <div class="logo">
            <h1>Group of Hospitals</h1>
        </div>
        <nav>
            <ul>
                <li><a href="/home">Home</a></li>
                <li><a href="/home/about">About Us</a></li>
                <li><a href="/home/contact">Contact</a></li>
            </ul>
        </nav>
    </header>

    <!-- Banner Section -->
    <section class="banner">
        <div class="banner-content">
            <h2>Committed to Your Health</h2>
            <p>Leading the way in healthcare with compassionate service and state-of-the-art facilities.</p>
        </div>
    </section>

    <!-- About Us Section -->
    <section class="about-us">
        <h1>About Us</h1>
        <div class="about-container">
            <div class="about-text">
                <h2>Our Mission</h2>
                <p>At our hospital, we strive to provide comprehensive healthcare services to all members of our
                    community. Our mission is to deliver the highest quality care with compassion, dedication, and
                    cutting-edge medical technology.</p>
                <h2>Our Vision</h2>
                <p>Our envision a world where every individual, regardless of their background or circumstances, has
                    access to affordable, high-quality healthcare services. Our mission is to create a healthier future
                    by building an ecosystem that prioritizes patient well-being, fosters innovation, and promotes
                    equality in healthcare delivery. We aim to empower individuals to lead healthier and more fulfilling
                    lives through compassionate care, advanced medical solutions, and a commitment to continuous
                    improvement.

                    By combining cutting-edge technology, expert medical professionals, and a patient-centric approach,
                    we strive to redefine healthcare standards. We believe in making a meaningful difference in people's
                    lives by ensuring that every community has access to the resources they need for a healthier,
                    happier tomorrow..</p>
            </div>
            <div class="about-image">
                <img src="/assets/gmchMain.png" alt="Hospital Building" />
            </div>
        </div>
    </section>

    <!-- Services Section -->
    <section class="services">
        <h2>Our Key Services</h2>
        <div class="services-container">
            <% services.forEach(service => { %>
                <div class="service-card">
                    <div class="service-icon"><%= service.icon %></div>
                    <h3><%= service.title %></h3>
                    <p><%= service.description %></p>
                </div>
            <% }) %>
        </div>
    </section>

    <!-- Team Section -->
    <section class="team">
        <h2>Meet Our Expert Team</h2>
        <div class="slider-container">
            <button class="arrow arrow-left" onclick="moveSlide(-1)">&#10094;</button>
            <div class="team-container" id="teamContainer">
                <% doctors.forEach((doctor) => { %>
                    <div class="team-card">
                        <img src="<%= doctor.image %>" alt="<%= doctor.name %>">
                        <h3><%= doctor.name %></h3>
                        <p><%= doctor.specialization %></p>
                    </div>
                <% }); %>
            </div>
            <button class="arrow arrow-right" onclick="moveSlide(1)">&#10095;</button>
        </div>
    </section>


    <!-- Testimonials Section -->
    <section class="testimonials">
        <h2>What Our Patients Say</h2>
        <div class="testimonial-container">
            <% testimonials.forEach(test => { %>
                <div class="testimonial">
                    <p>"<%= test.text %>"</p>
                    <span>- <%= test.author %></span>
                </div>
            <% }) %>
        </div>
    </section>


    <!-- Back to Top Button -->
    <button class="back-to-top">↑</button>

    <!-- Footer Section -->
    <footer>
        <p>&copy; 2024 Group of Hospitals All rights reserved.</p>
    </footer>

</body>
<script>
    let scrollAmount = 0;
    const teamContainer = document.getElementById('teamContainer');
    const cardWidth = document.querySelector('.team-card').offsetWidth + 20;

    function moveSlide(direction) {
        scrollAmount += direction * cardWidth;
        teamContainer.style.transform = `translateX(${-scrollAmount}px)`;
    }
</script>

</html>